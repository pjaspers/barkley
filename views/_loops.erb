<table class="loops">
  <colgroup>
    <col style="width: 19%"/>
    <% [1,2,3,4,5].each do |i| %>
      <col style="width: 9%">
      <col style="width: 9%">
    <% end %>
  </colgroup>
  <thead>
    <tr>
      <th class="loops__header">
        Name
      </th>
      <% [1,2,3,4,5].each do |i| %>
        <% if i > 1 %>
          <th class="loops__header">
            <div>
              <span>Loop <%=i %></span>
              <span>start</span>
            </div>
          </th>
        <% end %>

        <th class="loops__header">
          <div>
            <span>Loop <%=i %></span>
            <span>finish</span>
          </div>
        </th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @edition.sorted_nicknames.each do |nickname| %>
      <tr class="loops__line">
        <td class="loops__name">
          <span class="loops__name__nick"><%= nickname.name %></span>
          <% if runner = nickname.runner %>
            <span class="loops__name__guess">
              <a href="<%= runner_a(runner.key) %>">
                <%= runner.profile.name %>?
              </a>
            </span>
          <% end %>
        </td>

        <% nickname.loops.each.with_index(1) do |l, i| %>
          <% if i > 1 %>
            <td>
              <div class="loops__cell__inner">
                <span>
                <% if l.started? || l.finished? || l.dnf? %>
                  <% if l.start %>
                    <% if l.start_source %>
                      <a href="<%= l.start_source %>" title="<%= l.start_title %>"><%= hhmmss(l.start) %></a>
                    <% else %>
                      <%= hhmmss(l.start) %>
                    <% end %>
                  <% end %>
                <% end %>
                </span>
                <span>
                  <% if i == 5 && l.start && (l.started? || l.finished? || l.dnf?) %>
                    <span class="highlight highlight--yellow highlight--sm"><%= l.direction.to_s.upcase %></span>
                  <% end %>
                </span>
              </div>
            </td>
          <% end %>
          <td data-score="<%= l.score %>">
            <div class="loops__cell__inner">
              <span>
              <% if l.dnf? %>
                <% if l.finish_source %>
                  <a href="<%= l.finish_source %>" title="<%= l.stop_title %>"><span class="highlight highlight--red">DNF</span></a>
                <% else %>
                  <span class="highlight highlight--red">DNF</span>
                <% end %>
              <% elsif l.finished? %>
                <% if l.finish_source %>
                  <a href="<%= l.finish_source %>" title="<%= l.stop_title %>"><%= hhmmss(l.stop) %></a>
                <% else %>
                  <%= hhmmss(l.stop) %>
                <% end %>
              <% elsif l.started? %>
                <span class="highlight highlight--green loops__ongoing"><%= elapsed(l.started_at, style: "narrow") %></span>
              <% end %>
              </span>
              <span>
                <% if l.fun_run? %>
                  <span class="highlight highlight--blue highlight--sm" title="Completed a Fun Run">FUN</span>
                <% end %>
              </span>
            </div>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
